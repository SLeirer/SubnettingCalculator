@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-start" label="butts">
    <p>Gebe die NetId und Das subnetz ein</p>
    <form method="post">
        <input type="text" class="NetIDInput" placeholder="NetID" asp-for="NetIdEingabe"> /
        <input type="text" class="SubnetInput" placeholder="NetzAnteil(bits)" asp-for="NetzAnteilEingabe">
        <button class="btn_submit" type="submit">Update</button>
    </form>
    <p>@Model.Message</p>
</div>
<br>
<hr>

<div class="text-start" label="butts2">
    <table class="table table-success table-striped">
        <tHead>
            <tr>
                <th scope="col">Subnetzmaske</th>
                <th scope="col">NetID</th>
                <th scope="col">Erster host</th>
                <th scope="col">Letzter Host</th>
                <th scope="col">Broadcast</th>
                <th scope="col">Anzahl hosts</th>
                <th scope="col">NetzAnteil(bit)</th>
                <th scope="col">Netz teilen</th>
            </tr>
        </tHead>
        <tbody>
            @for(int i = 0; i<@Model.subnetzliste.Count(); i++){
                <tr>
                    <td>@Model.subnetzliste[i].SubnetzMaske</td>
                    <td>@Model.subnetzliste[i].NetID</td>
                    <td>@Model.subnetzliste[i].ErsterHost</td>
                    <td>@Model.subnetzliste[i].LetzterHost</td>
                    <td>@Model.subnetzliste[i].Broadcast</td>
                    <td>@Model.subnetzliste[i].AnzahlHosts</td>
                    <td>@Model.subnetzliste[i].NetzAnteil</td>
                    <td>
                        <button class="btn_submit" type="submit" label="butts" id = i>Teilen</button>
                    </td>
                </tr>
            } 
        </tbody>
    </table>
</div>